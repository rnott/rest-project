{
  "javaType" : "com.trizic.api.model.ModelRequest",
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "urn:jsonschema:com:trizic:advisor:domain:entities:Model",
  "additionalProperties": false,
  "properties": {
  	"name": {
      "description": "Unique Name for the model",
      "type": "string"
    },
    "description": {
      "description": "Description of the model",
      "type": "string"
    },
    "cashHoldingPercentage": {
      "description": "Percentage of cash to hold in the model",
      "type": "integer"
    },
    "driftPercentage": {
      "description": "Percentage of drift from target allocation of assets",
      "type": "integer"
    },
    "modelType": {
      "description": "Type of model",
      "type": "string",
      "enum": [
        "QUALIFIED",
        "TAXABLE"
      ]
    },
    "rebalanceFrequency": {
      "description": "Frequency to rebalance model",
      "type": "string",
      "enum": [
        "MONTHLY",
        "QUARTERLY",
        "SEMI_ANNUAL",
        "ANNUAL"
      ]
    },
    "assetAllocations": {
      "description": "Asset Allocations",
      "type": "array",
      "items": {
        "$ref": "#/definitions/assetAllocation"
      }
    }
  },
  "definitions": {
    "assetAllocation": {
      "javaType" : "com.trizic.api.model.AssetAllocation",
      "type": "object",
      "properties": {
        "symbol": {
          "description": "The asset symbol",
          "type": "string"
        },
        "percentage": {
          "description": "The percentage of the model to allocate for the symbol",
          "type": "number"
        }
      },
      "required": [
        "symbol",
        "percentage"
      ]
    }
  },
  "required": [
    "name",
    "description",
    "assetAllocations",
    "rebalanceFrequency",
    "modelType",
    "driftPercentage",
    "cashHoldingPercentage"
  ]
}
